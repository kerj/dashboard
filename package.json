{
  "name": "project-dashboard",
  "main": "electron.js",
  "homepage": "./",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.19.0",
    "d3": "^5.10.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.4.0",
    "node-sass": "^7.0.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "^3.3.0"
  },
  "devDependencies": {
    "electron": "^7.1.1",
    "electron-builder": "^21.2.0"
  },
  "build": {
    "appId": "tv.sticky.project-dashboard",
    "asar": true,
    "asarUnpack": [
      "build/index.html",
      "build/electron.js"
    ],
    "directories": {
      "buildResources": "public",
      "output": "releases/"
    },
    "extends": "react-cra",
    "win": {
      "target": "dir",
      "icon": "public/appicon.jpg"
    }
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "coverage": "npm test -- --coverage",
    "eject": "react-scripts eject",
    "electron": "electron build/electron.js",
    "package-win": "npm run build && electron-builder build --win --ia32 && mv releases/win-ia32-unpacked releases/project-dashboard"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 50,
        "functions": 100,
        "lines": 100
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
